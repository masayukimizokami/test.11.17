<div class="content-profile">
  <h1>プロフィールページ</h1>

  <div class="user-profile">
        <%= form_for @user do |f| %>

        <div class="field">
            
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :変更後パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :パスワード確認用用（変更する場合のみ入力） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :現在のパスワード） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>


          <div class="actions">
            <%= f.submit "更新" %>
          </div>

        <% end %>

        <%= link_to "戻る", "/users/#{current_user.id}" ,class: "button is-warning is-light"%>
    </div>
</div>
