<h3>こちら側ルームの詳細ページが入ります</h3>

<div class="room_show">
  <div class="content-wrap">
    <div class="room-show-wrap">
             
                    <p class="showImg"><%= image_tag @room.image %></p>
                    
                    <p class="showText"><%= @room.room_name %></p>  
                    <p class="showText"><%= @room.room_address %></p>
                    <p class="showText"><%= @room.room_PR %></p>
                 
    </div>

    <div class="reservation-new-wrap">
        
        <%= form_for @room, method: :get, url: reserve_confirm_path do |form| %>
            <div>
                <dt>¥<%= @room.room_price %>/日<dt>
            </div>
        <% end %>
        <%= form_for @reserve, method: :post, url: reserve_confirm_path do |form| %>
            <dl>
                
                <dt>開始日</dt>
                <dd><%= form.date_field :start_date %></dd>
                <dt>終了日</dt>
                <dd><%= form.date_field :end_date %></dd>
                <dt>人数</dt>
                <dd><%= form.number_field :num_people %></dd>
            </dl>

            <%= form.submit '確認画面へ' %>
        <% end %>
      
    </div>
  </div>
</div>

 


