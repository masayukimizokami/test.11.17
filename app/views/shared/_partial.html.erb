<!---ヘッダーを実装-->
<div class="header_area">
            <% if flash[:notice] %>
              <div class="notification is-info">
                <p class="notice"><%= notice %></p>
              </div>
            <% end %>

            <% if flash[:alert] %>
              <div class="notification is-danger">
                <p class="alert"><%= alert %></p>
              </div>
            <% end %>
            
    <div class="lefterea">
                
      <div class="searchbox_area">
         <% if user_signed_in? %>
             <ul >
                                  <li><%= link_to "ルームを登録する", "/rooms/new" %></li>
                                  <li> <%= link_to "登録済みルーム", users_path(current_user)  %></li>
                                  <li> <%= link_to "予約済みルーム", "/rooms/reserve" %></li>
                                  <li><%= link_to "設定ページ", user_path(current_user) %></li>
                                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
             </ul>
          <% end %>
                <div class="logo">
                  <%= link_to root_path, class: "rogo" do %>
                    <%= image_tag 'https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png'  %>
                  <% end %>
                 
                </div>

                <div class="searchbox">
                  <%= search_form_for @q, url: search_rooms_path do |f| %>  
                      <%= f.label :room_name_cont, 'ルーム名' %>
                      <%= f.search_field :room_name_cont ,class: "searchFieldBox"%>
                      <div class="icon"><!--キーワード検索アイコン-->
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" color="black"class="bi bi-search" viewBox="0 0 16 16">
                      <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>
                      </div>
                  <% end %>
                </div>

                <div class="searchbox">
                  <%= search_form_for @q, url: search_rooms_path do |f| %>  
                      <%= f.label :room_address_cont, 'エリア' %>
                      <%= f.search_field :room_address_cont ,class: "searchFieldBox"%>
                      <div class="icon"><!--エリア検索アイコン-->
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" color="black" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/></svg>     
                      </div>
                  <% end %>
                </div>
       </div>  
          
   </div>
   <div class="center_area">
   <a></a>
   
   </div>
    <div class="right_area">  
                <% if user_signed_in? %>
                 <div class="user_info">
                          <div class="user_name">
                              <%= current_user.name %>
                          </div>
                          <div class="user_icon"> 
                            <% if current_user.image.attached?%>
                              <% image_tag current_user.image,class:'header-user-image' %>
                            <% else %>
                               <% image_tag 'no-image.user.png',class:'header-user-image' %>
                            <% end %>
                          </div>
                          <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                      
                                        <%= image_tag 'no-image.user.png',class: 'header-user-image' %>
                                      
                           </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                  <li><%= link_to "ルームを登録する", "/rooms/new" %></li>
                                  <li> <%= link_to "登録済みルーム", users_path(current_user)  %></li>
                                  <li> <%= link_to "予約済みルーム", "/rooms/reserve" %></li>
                                  <li><%= link_to "設定ページ", user_path(current_user) %></li>
                                  <li> <%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                            </ul>
                           </div>
               
                <% else %>
                    <div class="logbutton">
                        <%= link_to "ログイン", new_user_session_path, class: "button is-warning is-light" %>   
                        <%= link_to "新規登録", new_user_registration_path,  class: "button is-warning is-light" %>
                    </div>
                <% end %>

                
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
   </div>           
</div>       